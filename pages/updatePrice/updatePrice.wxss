/* pages/updatePrice/updatePrice.wxss */
.menu-wrap {
  height: 100vh;
  padding: 0 0;
  position: relative;
}
image {
  width: 100%;
  height: 100%;
}

.top-btn {
  text-align: right;
  height: 100rpx;
  line-height: 100rpx;
}
.top-btn .change {
  margin-right: 30rpx;
  padding: 14rpx 50rpx;
  background: #ff9b26;
  color: #fff;
  border-radius: 50rpx;
}

/* 三角形 */
.head-wrap .city-wrap .triangle-wrap{
    width: 0;
    height: 0;
    border-left: 14rpx solid transparent;
    border-right: 14rpx solid transparent;
    border-top: 14rpx solid #666;
}

/* 菜谱区域 */
.content-wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}
.smallClass-list, .smallClass-list2 {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 80rpx;
  width: 180rpx;
  height: 100%;
  background-color: #f7f5f5;
}
.smallClass-list2 {
  left: 180rpx;
}

.smallClass-list-have-nar{
  top: 100rpx;
}

.smallClass-list .smallClassItem, .smallClass-list2 .smallClassItem {
  width: 180rpx;
  padding: 22rpx 28rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  color: #333;
  position: relative;
}

.smallClass-list .smallClassItem .icon, .smallClass-list2 .smallClassItem .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.smallClass-list .smallClassItem.cur, .smallClass-list2 .smallClassItem.cur {
  background-color: #fff;
  font-weight: 600;
}

.product-list {
  height: 100%;
  padding-left: 180rpx;
}

.product-list .goodsItem {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}
.product-list .goodsItem .classType {
  width: 100%;
}
.goodsItem .type .info {
  color: #A8A8A8;
}
.goodsItem .type-price input {
  color: #333;
  margin: 0 10rpx;
  width: 140rpx;
  border: 1rpx solid #f0f0f0;
  text-align: center;
}
.product-detail-wrap {
  height: 100%;
  flex: 1;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  overflow: hidden;
}

.product-list .product-detail-wrap .title {
  line-height: 48rpx;
}

.product-detail-wrap .label{
  margin-top: 10rpx;
  padding: 6rpx 16rpx;
  border: 1rpx solid #f3f3f3;
  border-radius: 46rpx;
}

.product-detail-wrap .price {
  color: #FFA800;
  font-weight: 700;
  line-height: 36rpx;
}

.product-detail-wrap .unit {
  color: #999999;
  margin-left: 12rpx;
}
