/* pages/customOrder.wxss */
page {
  background: #F2F2F2;
}
.customOrder .order-detail {
  border-radius: 16rpx;
  padding: 20rpx 0;
}
.order-detail .order-name {
  color: #FFA800;
}
.order-detail .tables {
  position: relative;
} 
.tables .specifications {
  flex: 0 0 140rpx;
}
.tables .tbody view{
  height: 60rpx;
  line-height: 60rpx;
  justify-content: center;
}
.tables .tbody input {
  width: 60%;
  border: 1rpx solid #f0f0f0;
}
.tables .tbody .type {
  color: #C4C4C4;
  padding: 4rpx 20rpx;
  border: 1rpx solid rgb(196, 196, 196);
  font-size: 24rpx;
  border-radius: 15rpx;
}
.info .check {
  height: 60rpx;
}
.info .check .txt {
  line-height: 60rpx;
  width: 250rpx;
}
.info .check .modelIpt {
  border-radius: 10rpx;
  border: 1rpx solid #f3f3f3;
  position: relative;
  width: 100%;
  height: 100%;
  line-height: 100%;
}
.ipt {
  width: 160rpx;
  border: 1rpx solid #F3F3F3;
}
.modelIpt .val {
  line-height: 60rpx;
  padding-right: 50rpx;
}
.modelIpt .arrow {
  top: 12rpx;
  right: 12rpx;
  position: absolute;
  transform: rotate(90deg);
}
.foot-btn {
  flex-direction: row-reverse;
}
.save-btn {
  border-radius: 30rpx;
  padding: 8rpx 42rpx;
  background-color: #FFA800;
  color: #fff;
}
.ffa {
  color: #FFA800 !important;
}