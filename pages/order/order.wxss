/* pages/order/order.wxss */
.orderBlock {
  border: 4rpx solid #F8CD79;
  border-radius: 20rpx;
}
.order-date{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.order-item {
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.order-item .name {
  width: 180rpx;
}
.order-status {
  padding: 13rpx 30rpx;
  display: flex;
  flex-direction: row-reverse;
}
.order-status .btn {
  border-radius: 20rpx;
  padding: 10rpx 26rpx;
  background-color: #FFA800;
  color: #fff;
}
.addBtn {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  text-align: center;
}
.addBtn .addOrder {
  color: #fff;
  padding: 20rpx 0;
  background-color: #FFA800;
  border-radius: 30rpx;
}
/* 弹框 */
.shopPop-bg{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 98;
  background-color: rgb(236, 234, 234);
  opacity: 0.5;
}
.shopPop{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 99;
}

.shopPop .shopPop-wrap{
  width: 600rpx;
  border-radius: 40rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow:0 0 20rpx rgb(206, 205, 205);
}
.shopPop .shopPop-foot{
  padding: 80rpx 50rpx;
  border-top: 1rpx solid #E5E5E5;
}
.shopPop .shopPop-foot .btn {
  color: #fff;
  background: #FFA800;
  margin: 50rpx 0;
  border-radius: 20rpx;
}